<%- include('../partials/header') %>

<section class="internal">
<%- include('../partials/admin-nav') %>

<div class="container">
    <h1 class="title"><%=title%></h1>
    
    <div class="container-inner">
        <a href="/<%=title%>/create">
            Create new News item
        </a>

        <form id="addNews" method="POST" action="/news/seed">
            <button type="submit" onclick="confirm('Migrate a page?');">
                <img src="/images/icons/icons8-one-page-48.png">
            </button>
        </form>

        <div class="page-container">

            <% if (news.length > 0 ) { %>
                <% news.forEach(item => {%>
                    <div class="page-length">
                        <a href="/<%=title%>/edit/<%=item.id%>">
                            <h3><%=item.title%></h3>
                        </a>
                        <div class="right-side">
                            <form action="/<%=title%>/delete/<%=item.id%>" method="POST" >
                                <button type="submit">
                                    <img src="/images/icons/icons8-trash-64.png">
                                </button>
                            </form>
                            
                            <a class="go-link" href="<%=item.title%>">
                                <img id="go-<%=title%>" src="/images/icons/icons8-forward-48.png">
                            </a>
                        </div>
                    </div>

                <% }) %>
            <% } else { %>

                <div class="gif">
                    <h3 class="danger-empty">Such emptyness...</h3>
                    <iframe src="https://giphy.com/embed/j6aoUHK5YiJEc" width="100%" height="100%" style="position:absolute;margin-top:2rem;" frameBorder="0" class="giphy-embed" allowFullScreen></iframe>
                </div>
            <% } %>
            
        </div>

        <%- include('../partials/footer') %>

    </div>

</div>

</section>