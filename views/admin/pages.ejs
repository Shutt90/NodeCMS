<%- include('../partials/header') %>

<section class="internal">
<%- include('../partials/admin-nav') %>

<div class="container">
    <h1 class="title"><%=title%></h1>
    
    <div class="container-inner">
        <a href="/pages/create">
            Create new Page
        </a>

        <div class="testing-button">
        <form method="POST" action="/pages/deleteall">
            <button type="submit" onclick="confirm('Delete all pages?');">
                <img src="/images/icons/icons8-skull-crossbones-48.png">
            </button>
        </form>

        <form method="POST" action="/pages/seed">
            <button type="submit" onclick="confirm('Migrate a page?');">
                <img src="/images/icons/icons8-one-page-48.png">
            </button>
        </form>

    </div>

        <div class="page-container">

            <% if (pages.length > 0 ) { %>
                <% pages.forEach(page => {%>
                    <div class="page-length">
                        <a href="/pages/edit/<%=page.id%>">
                            <h3><%=page.name%></h3>
                        </a>
                        <div class="right-side">
                            <form action="/pages/delete/<%=page.id%>" method="POST" >
                                <button type="submit">
                                    <img src="/images/icons/icons8-trash-64.png">
                                </button>
                            </form>
                            
                            <a class="go-link" href="<%=page.anchor%>">
                                <img id="go-page" src="/images/icons/icons8-forward-48.png">
                            </a>
                        </div>
                    </div>

                <% }) %>
            <% } else { %>

                <div class="gif" style="width:100%;height:0;padding-bottom:97%;position:relative;">
                    <h3 class="danger-empty">Such emptyness...</h3>
                    <iframe src="https://giphy.com/embed/j6aoUHK5YiJEc" width="100%" height="100%" style="position:absolute;margin-top:2rem;" frameBorder="0" class="giphy-embed" allowFullScreen></iframe>
                </div>
            <% } %>
            
        </div>

        <%- include('../partials/footer') %>

    </div>

</div>

</section>