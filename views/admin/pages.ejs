<%- include('../partials/header') %>

<section class="pages">
<%- include('../partials/admin-nav') %>

<div class="container">
    <h1 class="title"><%=title%></h1>
    
    <div class="container-inner">
        <a href="/pages/create">
            Create new Page
        </a>

        <div class="page-container">

            <% if (pages.length > 0 ) { %>
                <% pages.forEach(page => {%>
                    <div class="page-length">
                        <a href="/pages/edit/<%=page.id%>">
                            <h3><%=page.name%></h3>
                        </a>
                        
                        <a class="go-link" href="<%=page.anchor%>">
                            <img src="/images/icons/icons8-forward-48.png">
                        </a>
                    </div>

                <% }) %>
            <% } else { %>

                <div style="width:100%;height:0;padding-bottom:97%;position:relative;">
                    <h3 class="danger-empty">Such emptyness...</h3>
                    <iframe src="https://giphy.com/embed/j6aoUHK5YiJEc" width="100%" height="100%" style="position:absolute;margin-top:2rem;" frameBorder="0" class="giphy-embed" allowFullScreen></iframe>
                </div>
            <% } %>
            
        </div>

        <%- include('../partials/footer') %>

    </div>

</div>

</section>