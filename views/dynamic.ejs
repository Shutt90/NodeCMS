<%- include('./partials/header.ejs') %>
<section class="dynamic">
    <%- include('./partials/nav.ejs') %>

    <div class="title">
        <h1 class="title-txt"><%=page.name%></h1>
    </div>
    <div class="content">
        <p class="content-text"><%=page.content%></p>

        <% if (locals.page.images != "" && locals.page.images != undefined) { %>
            <img class="content-image" src="<%= page.images %>">
        <% } else { %>
            <img class="content-image" src="https://images.hdqwalls.com/wallpapers/the-batman-2022-5k-q8.jpg">
        <% } %>
    </div>

</section>

<%- include('./partials/footer.ejs') %>
